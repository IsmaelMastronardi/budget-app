<div class="w-full relative">
  <div class="text-center bg-blue fixed top-0 left-0 right-0">
    <h1 class="font-bold text-4xl text-white">Log In</h1>
  </div>
</div>
<div class="mt-14 bg-white">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", class: "w-full mb-2" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "w-full mb-2" %>
    </div>

    <div class="w-full flex flex-row text-center justify-center items-center bg-blue py-2 fixed bottom-11 border-b-1">
      <%= f.submit "Log in", class: "bg-blue-600 text-white block font-medium" %>
    </div>
    <div class="w-full flex flex-row text-center justify-center items-center bg-blue py-2 fixed bottom-0">
      <%= link_to "Sign up", new_registration_path(resource_name), class: "bg-blue-600 text-white block font-medium px-20" %>
    </div>
  <% end %>

</div>

