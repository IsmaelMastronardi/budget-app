<div class="w-full relative">
  <div class="text-center bg-blue fixed top-0 left-0 right-0 py-1">
    <h1 class="font-bold text-4xl text-white">Log In</h1>
  </div>
</div>
<div id="entities" class="fixed left-4 top-3">
  <%= link_to image_tag("arrow.png", class:"max-h-6"), root_path %>
</div>
<div class="mt-14 bg-white">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email",
      class: "w-full border-x-0 border-y-1 outline-none" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password",
      class: "w-full border-x-0 border-y-1 mb-2" %>
    </div>

    <div class="w-full flex flex-row text-center justify-center items-center bg-blue py-2">
      <%= f.submit "Log in", class: "w-full bg-blue-600 text-white block font-medium" %>
    </div>
  <% end %>

</div>

