  <% end %>
  
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Entities</h1>
    <h2><%= @group.entities.size %> </h2>
    <%= link_to "New entity", new_user_group_entity_path(current_user, @group), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="entities" class="min-w-full">
    <%= render @group.entities %>
  </div>

    <div id="entities" class="min-w-full">
    <%= link_to "back to groups", user_groups_path(current_user) %>
