<div id="<%= dom_id entity %>">
  <div class="flex flex-row items-center justify-center mb-4 text-center bg-white border">
    <div class="flex-1">
      <div class="flex flex-row items-center justify-between px-4 text-center">
        <div>
          <%= entity.name.capitalize() %>
        </div>
        <div>
         Amount: $<%= entity.amount %>
        </div>
        <%= button_to image_tag("trash.png", class:"max-h-6"), 
        user_group_entity_path(current_user, @group, entity), 
        method: :delete, 
        class: "align-middle rounded-lg py-3 px-5 font-medium mb-1",
        form_class: "inline"
        %>
      </div>

    </div>

  </div>
</div>
